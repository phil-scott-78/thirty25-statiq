{
  "name": "thirty25-statiq",
  "version": "1.0.0",
  "description": "thirty25.com blog with statiq",
  "main": "index.js",
  "scripts": {
    "install-dotnet": "./dotnet-install.sh --channel Current --install-dir ~/.net/",
    "build:tailwind": "tailwind build ./input/tailwind.css  -c ./input/tailwind.config.js  -o ./public/assets/styles.css",
    "build": "npm run install-dotnet && cross-env NODE_ENV=production ~/.net/dotnet run -- -o public",
    "watch": "dotnet run -- preview"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.3",
    "postcss": "^8.2.4",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "postcss-cli": "^8.3.1"
  }
}
